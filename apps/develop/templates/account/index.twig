                                            {#<img src="{{ orgUser.user.avatar_small_url }}" alt="" />#}
                                            {#{{ orgUser.user.getJSONData()|dump|raw }}#}
                                        {#</figure>#}
                                    {#</div>#}
                                    {#<div class="sheet-right">#}
                                        {#<h4 class="sheet-author">#}
                                            {#<a href="#">{{ orgUser.display_name ? orgUser.display_name : orgUser.user.display_name }}</a> <span class="sheet-author-timestamp">{{ organization_activity.create_time_ago }}:</span>#}
                                        {#</h4>#}
                                    {#</div>#}
