<div class="container pt-m">

    {% include "account/blocks/breadcrumbs.twig" %}

    <div class="flex pt-l is-wrapping">
        <div class="column is-3 is-fullwidth-mobile">

            {% include "account/blocks/side-nav.twig" %}

        </div>
        <div class="column is-9 is-fullwidth-mobile">
            <div class="column is-12">
                <div class="sheet">
                    <div class="sheet-title">
                        <h2 class="title is-2">Edit Role: {{ organization_role.display_name }}</h2>
                        <p class="admin-desc">
                            This role grants a specific sets of access levels to members of the organization, as indicated below.
                        </p>
                    </div>
                    <div class="sheet-content p-l">
                        <form action="{{ path }}" method="post" data-esc-ajax-form="json">
                            {{ form|raw }}
                        </form>
                    </div>
                </div>

                {% if active_organization.permissions.has('organization.permissions', 'a') %}
                    <div class="sheet">
                        <div class="sheet-title">
                            <h2 class="title is-2">Permissions</h2>
                            <p class="admin-desc">
                                Manage the organization access levels for this role.
                            </p>
                        </div>
                        <div class="sheet-content p-l">
                            <form action="{{ develop_url }}/teams/{{ active_organization.slug }}/edit-permissions/{{ organization_role.getPk() }}" method="post" data-esc-ajax-form="json" data-esc-form-success-method="remain">
                                {{ permissions_form|raw }}
                            </form>
                        </div>
                    </div>
                {% endif %}

            </div>
        </div>
    </div>
</div>

