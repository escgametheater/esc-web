{# Members & Permissions Section#}
{%
    if active_organization.permissions.has('organization.members', 'u')
    or active_organization.permissions.has('organization.profile', 'u')
    or active_organization.permissions.has('organization.roles', 'u')
    or active_organization.permissions.has('organization.permissions', 'a')
%}

    <div class="sidebar-title mb-s"> {% t "Team" %}</div>
    <div class="pb-l">
        {% if not active_organization or active_organization.permissions.has('organization.profile', 'u') %}
            <a href="{{ develop_url }}/teams/{{ active_organization.slug }}/profile" class="sidebar-settinglink {% if page == "dev-org-profile"%} is-active{% endif %}" data-esc-tracking-service="mixpanel" data-esc-tracking="clicked" data-esc-tracking-content-type="side-nav-link" data-esc-tracking-context="manage-team-profile">{% t "Profile" %}</a>
        {% endif %}
        {% if active_organization.permissions.has('organization.members', 'u') %}
            <a href="{{ develop_url }}/teams/{{ active_organization.slug }}/members" class="sidebar-settinglink {% if page == "dev-org-members" or page == "dev-org-member" %} is-active{% endif %}" data-esc-tracking-service="mixpanel" data-esc-tracking="clicked" data-esc-tracking-content-type="side-nav-link" data-esc-tracking-context="manage-team-members">{% t "Members" %}</a>
        {% endif %}
        {% if active_organization.permissions.has('organization.roles', 'u') or active_organization.permissions.has('organization.permissions', 'a')  %}
            <a href="{{ develop_url }}/teams/{{ active_organization.slug }}/roles" class="sidebar-settinglink {% if page == "dev-org-roles" or page == "dev-org-role" or page == 'dev-org-edit-right' %} is-active{% endif %}" data-esc-tracking-service="mixpanel" data-esc-tracking="clicked" data-esc-tracking-content-type="side-nav-link" data-esc-tracking-context="manage-team-permissions">{% t "Roles & Permissions" %}</a>
        {% endif %}
    </div>

{% endif %}
