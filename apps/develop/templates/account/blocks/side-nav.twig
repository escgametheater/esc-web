{# Finance Section #}
{%
    if active_organization.permissions.has('billing.payments', 'u')
    or active_organization.permissions.has('billing.payouts', 'u')
%}
    <div class="sidebar-title mb-s"> {% t "Finance" %}</div>
    <div class="pb-l">
        {% if active_organization.permissions.has('billing.payments', 'u') %}
            <a href="{{ develop_url }}/teams/{{ active_organization.slug }}/orders" class="sidebar-settinglink {% if page == "dev-org-orders" %} is-active{% endif %}" data-esc-tracking-service="mixpanel" data-esc-tracking="clicked" data-esc-tracking-content-type="side-nav-link" data-esc-tracking-context="manage-orders">{% t "Orders" %}</a>
            <a href="{{ develop_url }}/teams/{{ active_organization.slug }}/billing" class="sidebar-settinglink {% if page == "dev-org-billing" %} is-active{% endif %}" data-esc-tracking-service="mixpanel" data-esc-tracking="clicked" data-esc-tracking-content-type="side-nav-link" data-esc-tracking-context="manage-billing">{% t "Billing" %}</a>
        {% endif %}
        {% if active_organization.permissions.has('billing.payouts', 'u') %}
