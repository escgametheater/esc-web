{% if user.permissions.has('organizations', 'm') %}
    <a href="{{ www_url }}/admin/organizations/edit/{{ active_organization.getPk() }}/" target="_blank" class="button is-grey7 is-small mb-s mt-s">Admin Edit</a>
{% endif %}

{% if active_organization.permissions.has('hosts', 'u') %}
    <div class="sidebar-title mb-s"> {% t "Activations" %}</div>
    <div class="pb-l">
        {% if active_organization.permissions.has('hosts', 'u') %}
            <a href="{{ develop_url }}/teams/{{ active_organization.slug }}/activations" class="sidebar-settinglink {% if page == "dev-manage-activations" or page == "dev-edit-activation" %} is-active{% endif %}" data-esc-tracking-service="mixpanel" data-esc-tracking="clicked" data-esc-tracking-content-type="side-nav-link" data-esc-tracking-context="manage-activations">{% t "GameDays" %}</a>
            <a href="{{ develop_url }}/teams/{{ active_organization.slug }}/activations/analytics" class="sidebar-settinglink {% if page == "dev-activation-analytics" %} is-active{% endif %}" data-esc-tracking-service="mixpanel" data-esc-tracking="clicked" data-esc-tracking-content-type="side-nav-link" data-esc-tracking-context="view-analytics">{% t "Analytics" %}</a>
        {% endif %}
    </div>
{% endif %}

{# Content Section #}
{%
    if active_organization.permissions.has('games.profile', 'u')
    or active_organization.permissions.has('mods.profile', 'u')
%}
    <div class="sidebar-title mb-s"> {% t "Content" %}</div>
    <div class="pb-l">
        {% if active_organization.permissions.has('games.profile', 'u') %}
            <a href="{{ develop_url }}/teams/{{ active_organization.slug }}/manage-games" class="sidebar-settinglink {% if page == "dev-manage-games" %} is-active{% endif %}" data-esc-tracking-service="mixpanel" data-esc-tracking="clicked" data-esc-tracking-content-type="side-nav-link" data-esc-tracking-context="manage-games">{% t "Games" %}</a>
        {% endif %}
        {% if active_organization.permissions.has('mods.profile', 'u') %}
            <a href="{{ develop_url }}/teams/{{ active_organization.slug }}/manage-mods" class="sidebar-settinglink {% if page == "dev-manage-mods" %} is-active{% endif %}" data-esc-tracking-service="mixpanel" data-esc-tracking="clicked" data-esc-tracking-content-type="side-nav-link" data-esc-tracking-context="manage-mods">{% t "Mods" %}</a>
        {% endif %}
    </div>
{% endif %}


