<div class="pagination" style="display: none;">

    {# Previous Button #}
    <div class="pagination-left">
        {% if p > 1 %}
            <a class="button is-inset pagination-left previous_link" href="{{ paginator.computeUrl(p-1) }}">{% t "Previous" %}</a>
        {% else %}
            <span class="button is-inset">{% t "Previous" %}</span>
        {% endif %}
    </div>

    <div class="pagination-right">
        {% if p < total_pages %}
            <a class="button is-inset next_link" href="{{ paginator.computeUrl(p+1) }}">{% t "Next" %}</a>
        {% else %}
            <span class="button is-inset">{% t "Next" %}</span>
        {% endif %}
    </div>

</div>
